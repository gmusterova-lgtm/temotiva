  "shortcuts": [
    {
      "name": "Blog",
      "short_name": "Blog",
      "description": "Lee artículos sobre bienestar emocional y autocuidado.",
      "url": "/blog/",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Recursos",
      "short_name": "Recursos",
      "description": "Accede a guías y ejercicios descargables.",
      "url": "/recursos.html",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Contacto",
      "short_name": "Contacto",
      "description": "Escríbenos o envíanos tus comentarios.",
      "url": "/contacto.html",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/share.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*"
          ]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/open.html",
      "accept": {
        "text/plain": [
          ".txt",
          ".md"
        ],
        "image/*": [
          ".png",
          ".jpg",
          ".jpeg",
          ".webp"
        ]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+temotiva",
      "url": "/inicio.html?data=%s"
    }
  ],

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "handle_links": "preferred",

  "edge_side_panel": {
    "preferred_width": 420
  },

  "note_taking": {
    "new_note_url": "/nota.html"
  },

  "tabs": [
    {
      "url": "/inicio.html",
      "title": "Inicio"
    },
    {
      "url": "/blog/",
      "title": "Blog"
    }
  ]
}
